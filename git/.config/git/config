[user]
	name = Nitul Datt
	email = nitul1991@gmail.com
[core]
	editor = vim
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
    st   = status
	sts  = status --short --branch
	df   = diff
	dfs  = diff --staged
	dft  = difftool
	dfts = difftool --staged
	br = branch
	co = checkout
	cmt = commit
	lg1 = log --pretty='format:%C(auto)%<|(11)%cs %C(cyan)%<|(23)%cn %C(auto)%h %s %d'
	list-files = show --pretty='' --name-only
	gr = log --oneline --decorate --graph --all
[init]
	defaultBranch = main
